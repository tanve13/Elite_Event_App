<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/v_gd_40"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".40"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/v_gd_60"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".60"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/h_gd_55"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".55"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/v_gd_33"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".33"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/v_gd_67"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".67"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/h_gd_60"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".60"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/h_gd_65"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".65"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/v_gd_30"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".30"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/v_gd_70"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".70"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#EFCAD6"
        android:elevation="@dimen/dp_10"
        android:src="@drawable/empty"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@+id/v_gd_67"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/v_gd_33"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.38" />

    <TextView
        android:id="@+id/textclick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_record"
        android:textSize="@dimen/sp_15"
        app:layout_constraintTop_toTopOf="@+id/h_gd_55"
        app:layout_constraintStart_toStartOf="@+id/v_gd_33"
        app:layout_constraintEnd_toEndOf="@+id/v_gd_67"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_click"
        android:textSize="@dimen/sp_15"
        app:layout_constraintTop_toBottomOf="@id/textclick"
        app:layout_constraintStart_toStartOf="@+id/v_gd_30"
        app:layout_constraintEnd_toEndOf="@+id/v_gd_70"/>
</androidx.constraintlayout.widget.ConstraintLayout>