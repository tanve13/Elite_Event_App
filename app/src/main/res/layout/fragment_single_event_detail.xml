<!--&lt;!&ndash;        android:visibility="gone"/>&ndash;&gt;-->

    <com.google.android.material.button.MaterialButton
        android:id="@+id/budget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/budget"
        android:textSize="@dimen/sp_15"
        android:textStyle="bold"
        app:cornerRadius="10dp"
        app:rippleColor="#F699B8"
        style="@style/CustomHighBold"
        android:drawableTop="@drawable/baseline_monetization_on_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/v_gd_70"
        app:layout_constraintStart_toStartOf="@+id/v_gd_40"
        app:layout_constraintTop_toTopOf="@+id/h_gd_86" />

    <com.airbnb.lottie.LottieAnimationView
    android:id="@+id/lottieDetails"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:elevation="5dp"
    app:lottie_autoPlay="true"
    app:lottie_loop="true"
    app:lottie_rawRes="@raw/details"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="@+id/h_gd_40"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>